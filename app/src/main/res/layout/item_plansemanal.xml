<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textPreguntaConductora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:fontFamily="@font/centurygothic"
            android:paddingLeft="2dp"
            android:text="Pregunta Conductora Semana"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPreguntaConductora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="Pregunta Conductora"
            android:inputType="textPersonName" />

        <!--TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:fontFamily="@font/centurygothic"
            android:paddingLeft="2dp"
            android:text="Desarrollo de la Clase"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtDesarrolloClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="Desarrollo de la clase Clase"
            android:inputType="textPersonName" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:fontFamily="@font/centurygothic"
            android:paddingLeft="2dp"
            android:text="Observación"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtObservacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="Observación"
            android:inputType="textPersonName" /-->



    </LinearLayout>
</android.support.v7.widget.CardView>


