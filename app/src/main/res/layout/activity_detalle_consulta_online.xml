<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tutor.Consulta.ConsultasOnlineDisponibles.DetalleConsultaOnline">


    <ScrollView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/txtTipoConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta Online"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txtNombreEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Estudiante"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:layout_marginTop="16dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnaceptar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#43A047"
                    android:text="Aceptar"
                    android:textStyle="bold"
                    android:fontFamily="@font/centurygothic"
                    android:textSize="20sp"
                    android:textColor="@color/colortextoblanco"
                    android:layout_margin="15dp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/btnrechazar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F30808"
                    android:text="Rechazar"
                    android:textStyle="bold"
                    android:fontFamily="@font/centurygothic"
                    android:textSize="20sp"
                    android:textColor="@color/colortextoblanco"
                    android:layout_margin="15dp"
                    style="?android:attr/buttonBarButtonStyle"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>