<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutor.Actividades.MisActividadesTutorInsertFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/fab_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Curso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spcurso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unidad"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spunidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo Actividad"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/sptipoactividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiempo Estimado"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtTiempoEstimadoDuracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tiempo estimado de duración en plataforma"
                    android:inputType="text"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duración Estimada de Trabajo Autónomo" />

                <EditText
                    android:id="@+id/edtTiempoTrabajoAutonomo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Duración Estimada de Trabajo Autónomo"
                    android:inputType="text"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                   <TextView
                       android:id="@+id/textView24"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Contextualización del Tema"
                       android:textColor="@color/color"
                       android:fontFamily="@font/centurygothic"
                       android:layout_alignParentBottom="true"
                       android:textStyle="bold"/>

                   <Button
                       android:id="@+id/btninfocontext"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="@drawable/ic_info"/>

               </LinearLayout>

                <EditText
                    android:id="@+id/edtContextualizacionTema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Contextualización del Tema"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividad"
                        android:textColor="@color/color"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnactividadcontext"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_info"/>

                </LinearLayout>




                <EditText
                    android:id="@+id/edtActividad"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:hint="Actividad"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recursos Necesarios para la actividad"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtTipoRecursos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Tipo de Recursos 1"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtOrigenRecursos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/centurygothic"
                        android:hint="Origen Recursos 1"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtTipoRecursos2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Tipo de Recursos 2"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtOrigenRecursos2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Origen Recursos 2"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtTipoRecursos3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Tipo de Recursos 3"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtOrigenRecursos3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Origen Recursos 3"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entregables"
                        android:textColor="@color/color"
                        android:fontFamily="@font/centurygothic"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnentregables"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_info"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/edtEntregables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Entregables"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Criterios de Evaluación / Evidencias Asociadas(desempeño, producto y conocimiento)"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtCriteriosEvaluacion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Criterios de Evaluación 1"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtCriteriosEvaluacion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Criterios de Evaluación 2"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtCriteriosEvaluacion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Criterios de Evaluación 3"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtEvidenciasAsociadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Evidencias Asociadas 1"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:background="@drawable/ovalorange"
                    android:textStyle="bold"
                    android:fontFamily="@font/centurygothic"
                    android:textColor="@color/colortextoblanco"/>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/id_last"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="" />

    </LinearLayout>

</FrameLayout>