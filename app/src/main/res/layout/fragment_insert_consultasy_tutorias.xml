<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estudiante.ConsultasyTutorias.InsertConsultasyTutoriasEstudiante.InsertConsultasyTutorias">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tu Usuario: "
                    android:textColor="@color/colortexto"
                    android:textStyle="bold"
                    android:fontFamily="@font/centurygothic"/>

                <TextView
                    android:id="@+id/txtNombreEstudiante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/centurygothic"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de consulta"
                android:textColor="@color/colortexto"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                 android:layout_marginBottom="15dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtejemplo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Escribe tu consulta aquÃ­..."
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"/>

            <Button
                android:id="@+id/btn"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ovalorange"
                android:text="Enviar Consulta"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"

                />

            <TextView
                android:id="@+id/txtuuid"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>