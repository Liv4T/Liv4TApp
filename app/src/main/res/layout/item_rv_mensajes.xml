    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDF1E3"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cardview_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/perfil" />

        <TextView
            android:id="@+id/mensajetexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cardview_image"
            android:paddingBottom="5dp"
            android:text="Viral Android"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mensajetexto"
            android:layout_toRightOf="@+id/cardview_image"
            android:text="Free android tutorials and examples for beginners and expert."
            android:textColor="#8b8b8b" />

        <TextView
            android:id="@+id/fechahora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usuario"
            android:layout_toRightOf="@+id/cardview_image"
            android:text="Enviado Hace 10 dias"
            android:textColor="#8b8b8b" />



        <TextView
            android:id="@+id/documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardview_image"
            android:visibility="visible"
            android:layout_below="@id/fechahora"
            />

        <ImageView
            android:layout_below="@+id/fechahora"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/cardview_image"/>

        <LinearLayout
            android:id="@+id/documentoword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fechahora"
            android:layout_toRightOf="@id/cardview_image"
            android:orientation="horizontal"
            android:weightSum="10"
            android:visibility="invisible">


            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="@drawable/word" />

            <TextView
                android:id="@+id/nombredoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="TextView" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/documentopdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fechahora"
            android:layout_toRightOf="@id/cardview_image"
            android:orientation="horizontal"
            android:weightSum="10"
            android:visibility="invisible">


            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="@drawable/pdf" />

            <TextView
                android:id="@+id/nombrepdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="TextView" />
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/relativeaudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/fechahora"
            android:visibility="invisible">

            <TextView
                android:id="@+id/texttimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_below="@+id/texttimer"
                android:src="@drawable/ic_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_below="@+id/btn_play_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>


