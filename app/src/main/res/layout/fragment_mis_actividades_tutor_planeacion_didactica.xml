<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutor.Actividades.MisActividadesTutorPlaneacionDidactica">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tiempo de Trabajo"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

            </LinearLayout>


        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/txtTiempoTrabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tiempo de Trabajo"
            android:inputType="text"
            android:textColor="#000"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actividad"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>
        </LinearLayout>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/txtActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Actividad"
            android:inputType="text"
            android:textColor="#000"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Momento de Evaluación"
            android:textColor="@color/color"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelFechadesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnFechaDesde"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ovalorange"
                android:fontFamily="@font/centurygothic"
                android:text="Seleccionar Fecha Desde"
                android:textColor="@color/colortextoblanco"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelfechahasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnFechaHasta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ovalorange"
                android:fontFamily="@font/centurygothic"
                android:text="Seleccionar Fecha Hasta"
                android:textColor="@color/colortextoblanco"
                android:textStyle="bold" />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evidencia"
            android:textColor="@color/color"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/txtEvidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Evidencia"
            android:inputType="text"
            android:textColor="#000"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actor Interviniente en la Evaluacion"
            android:textColor="@color/color"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtActorInterviniente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/centurygothic"
            android:hint="Actor Interviniente en la Evaluación"
            android:inputType="text"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de RetroAlimentación"
            android:textColor="@color/color"
            android:fontFamily="@font/centurygothic"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelFechaRetroalimentacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnFechaRetroAlimentacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seleccionar"
                android:background="@drawable/ovalorange"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/colortextoblanco"
                />
        </LinearLayout>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btnGuardarPlaneacionDidactica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:background="@drawable/ovalorange"
            android:textStyle="bold"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/colortextoblanco"/>


    </LinearLayout>

    </ScrollView>

</FrameLayout>