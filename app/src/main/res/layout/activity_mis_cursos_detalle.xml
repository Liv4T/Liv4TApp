<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_reg_ini"

    android:paddingTop="20dp"
    tools:context=".Estudiante.Login.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:id="@+id/layout_reg">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youTube"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/scrolldebajo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/youTube">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/buttoniniciar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="animated.json" />


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:layout_toRightOf="@id/buttoniniciar"
                            android:fontFamily="@font/centurygothic"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="HTML PARA PRINCIPIANTES"
                            android:textColor="@color/color"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progressBar_horizontal"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_toRightOf="@id/buttoniniciar"
                            android:layout_below="@id/textView2"
                            android:progressDrawable="@drawable/greenprogress"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_below="@id/buttoniniciar"
                            android:text="Descripción del curso:" />

                        <TextView

                            android:id="@+id/expandible_listview"
                            android:layout_width="match_parent"
                            android:layout_below="@id/textView4"
                            android:text="Tema"
                            android:textSize="25sp"
                            android:layout_height="wrap_content">

                        </TextView>



                        <RelativeLayout
                            android:id="@+id/vermas"
                            android:layout_below="@+id/expandible_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/description_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="5"
                                android:background="#BEBEBEBE"
                                android:elevation="5dp"
                                android:text="@string/desc_content" />

                            <ImageButton
                                android:id="@+id/show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/description_text"
                                android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:clickable="true" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="wrap_content"
                                android:layout_height="2dp"
                                android:layout_below="@+id/description_text"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/show"
                                android:background="#000" />

                            <ImageButton
                                android:id="@+id/hide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/description_text"
                                android:clickable="true"
                                android:background="@drawable/ic_keyboard_arrow_up_black_24dp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/textViewdesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textSize="12sp"

                                android:layout_below="@id/hide"
                                android:text="Internet ha revolucionado en los últimos años la forma en que nos comunicamos y accedemos a la información. HTML ha contribuido enormemente a esta expansión debido a su sencillez, facilidad de proceso y capacidades de presentación." />

                        </RelativeLayout>


                        <!--include layout="@layout/activity_ver_mas"
                            android:layout_below="@id/textViewdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:id="@+id/inclue"/-->

                        <!--TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/centurygothic"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:layout_below="@id/textViewdesc"
                            android:text="INTRODUCCIÓN" /-->






                    </RelativeLayout>



                </android.support.v4.widget.NestedScrollView>





            </RelativeLayout>


    </LinearLayout>
    </FrameLayout>
    <ImageView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"

        android:src="@drawable/livetech">

    </ImageView>


</RelativeLayout>