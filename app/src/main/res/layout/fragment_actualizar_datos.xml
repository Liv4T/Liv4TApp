<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    tools:context=".Splash.Estudiante.Perfil.ActualizarDatosFragment">

    <ScrollView

        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilepic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="1dp"
                    android:src="@drawable/imagenperfil"/>


                <ImageView
                    android:id="@+id/changeprofilepic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="4dp"
                    android:layout_alignBottom="@+id/profilepic"
                    android:layout_alignRight="@+id/profilepic"
                    android:src="@drawable/uploadpicdark"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/subir_fotoActualizarDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:background="@color/colorbonton"
                android:textColor="@color/white"
                android:elevation="10dp"
                android:textSize="20dp"
                android:text="Subir foto" />


            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortexto"
                    android:textColorHint="@color/colortexto">

                    <EditText
                        android:id="@+id/nombreActualizarDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:textColor="@color/colortexto" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortexto"
                    android:textColorHint="@color/colortexto">

                    <EditText
                        android:id="@+id/apellidoActualizarDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellido"
                        android:inputType="textPersonName"
                        android:textColor="@color/colortexto" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortexto"
                    android:textColorHint="@color/colortexto">

                    <EditText
                        android:id="@+id/telefonoActualizarDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TelÃ©fono"
                        android:inputType="text|phone"
                        android:textColor="@color/colortexto" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txtUsuarioActualizarDatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textSize="20dp"
                    android:fontFamily="@font/centurygothic"

                    android:gravity="left"
                    android:textStyle="bold"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortexto"
                    android:textColorHint="@color/colortexto">

                    <EditText
                        android:id="@+id/emailActualizarDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colortexto" />
                </android.support.design.widget.TextInputLayout>









                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/update"
                        android:text="@string/update_details"
                        android:background="@drawable/ovalorange"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</FrameLayout>