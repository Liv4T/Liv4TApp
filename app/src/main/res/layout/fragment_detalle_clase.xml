<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estudiante.Liv4T.Tareas.DetalleClase"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary2"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Clase" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/nombreclase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Química"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descripción"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Explicación"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Documento"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10sp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descargar"
                    android:fontFamily="@font/centurygothic"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enlace de Apoyo"
                android:fontFamily="@font/centurygothic"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/enlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="www.liv4t.com"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:textSize="15sp"/>

        </LinearLayout>


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:focusable="true" >

        </com.google.android.exoplayer2.ui.PlayerView>


    </LinearLayout>


</FrameLayout>