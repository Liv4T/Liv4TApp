<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    tools:context=".Estudiante.MisCursos.MisCursosDetalleFragment">


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/layout_reg">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/youtube_player_view">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/buttoniniciar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="animated.json" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_toRightOf="@id/buttoniniciar"
                            style="@style/CustomRatingBar"
                            android:scaleX="0.5"
                            android:scaleY="0.5"/>



                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:layout_toRightOf="@id/buttoniniciar"
                            android:fontFamily="@font/centurygothic"
                            android:layout_marginTop="40dp"
                            android:gravity="center"
                            android:text="HTML PARA PRINCIPIANTES"
                            android:textColor="@color/color"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progressBar_horizontal"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_toRightOf="@id/buttoniniciar"
                            android:layout_below="@id/textView2"
                            android:progressDrawable="@drawable/greenprogress"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_below="@id/buttoniniciar"
                            android:text="DescripciÃ³n del curso:" />

                        <TextView
                            android:gravity="center_horizontal"
                            android:id="@+id/objetivos"
                            android:layout_width="match_parent"
                            android:layout_below="@id/textView4"
                            android:text="Objetivos del curso"
                            android:textSize="25sp"
                            android:layout_height="wrap_content">

                        </TextView>


                        <RelativeLayout
                            android:id="@+id/relativevermas"
                            android:layout_below="@+id/objetivos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">

                
                <android.support.v4.view.ViewPager
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />



            </RelativeLayout>


        </LinearLayout>
</FrameLayout>
</FrameLayout>
