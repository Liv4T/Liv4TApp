<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutor.Liv4T.PlanificacionGeneral.Anual.PlanificacionAnual">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logro 1"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/logro_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="logro 1"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logro 2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logro_dos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Logro 2"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logro 3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logro_tres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Logro 3"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logro 4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logro_cuatro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Logro 4"
            android:inputType="textPersonName" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ovalyellow"
            android:text="Guardar"
            android:textColor="#fff" />
    </LinearLayout>
</FrameLayout>