<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutor.Calificaciones.InsertCalificaciones.CalificacionesTutorInsertFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Curso"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Estudiante"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nameuser"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Actividad"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fase 1"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtFase1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fase 1"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fase 2"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtFase2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fase 2"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/labelfecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnfecha"
                    android:layout_margin="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ovalorange"
                    android:fontFamily="@font/centurygothic"
                    android:text="Seleccionar Fecha "
                    android:textColor="@color/colortextoblanco"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Última Fecha"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/labelfechamaxima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color"
                    android:fontFamily="@font/centurygothic"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnfechamaxima"
                    android:layout_margin="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ovalorange"
                    android:fontFamily="@font/centurygothic"
                    android:text="Seleccionar Fecha "
                    android:textColor="@color/colortextoblanco"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Componente 10"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtComponente10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Componente 10"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Componente 9"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtComponente9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Componente 9"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Componente 8"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtComponente8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Componente 8"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Componente 7"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtComponente7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Componente 7"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Componente 6"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtComponente6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Compontente 6"
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SubTotal"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtSubTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="SubTotal"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observación"
                android:textColor="@color/color"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtObservacion"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:hint="Observación..."
                android:inputType="text"
                android:textColor="#000"
                android:fontFamily="@font/centurygothic"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_margin="20dp"
                android:id="@+id/btnRegistrarCalificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:background="@drawable/ovalorange"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/colortextoblanco" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>