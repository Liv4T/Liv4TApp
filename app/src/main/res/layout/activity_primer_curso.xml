<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Estudiante.CursosDisponibles.PrimerCurso">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imDesc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtNombreCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imDesc"
        android:fontFamily="@font/centurygothic"
        android:layout_margin="5dp"
        android:textColor="@color/color"
        android:textStyle="bold"
        android:gravity="center"
        android:text="HTML PARA PRINCIPIANTES" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/centurygothic"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/txtNombreCurso"
        android:text="INTRODUCCIÃ“N" />
    <ExpandableListView

        android:id="@+id/expand"
        android:layout_width="425dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:paddingLeft="@dimen/activity_horizontal_margin_left"
        android:paddingRight="@dimen/activity_horizontal_margin_right"
        android:layout_below="@id/textView3"
        tools:ignore="MissingConstraints">


    </ExpandableListView>

    <ImageView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_below="@+id/layo_ini"
        android:src="@drawable/livetech">

    </ImageView>


</RelativeLayout>


</android.support.constraint.ConstraintLayout>